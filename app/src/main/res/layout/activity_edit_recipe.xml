<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF5E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/gradient_orange_header"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStartWithNavigation="0dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Navigate back"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit Recipe"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Update Your Recipe"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#D2691E"
                android:gravity="center" />

            <TextView
                android:id="@+id/RecipeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Recipe Name:"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/RecipeNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="Name of your Recipe"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="1st Fermentation: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D2691E" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Tea Leafs:"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/teaLeaf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="3 Tbs of Black Tea"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Water:"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="12 cups of Water"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Sugar:"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="3/4 cups of Sugar"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="SCOBY"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/scoby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="1/2 inch SCOBY"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Kombucha Starter: "
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kombuchaStarter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="3/4 cup of Kombucha Starter from Batch#3"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:text="Second Fermentation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D2691E" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="Flavor for Second Fermentation (Optional)"
                android:textColor="#8B4513"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/flavor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:hint="50 grams of Ginger and Dried Flowers"
                android:textColorHint="#CD853F"
                android:textColor="#8B4513"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/btnUpdateRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="Update Recipe"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="#FF6D00"
                android:textColor="@android:color/white" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:indeterminateTint="#FF8C00"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>