<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8C00"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Recipe Details"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#FF8C00"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/action_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Recipe Name and Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_recipe_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recipe Name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#D2691E"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DRAFT"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/status_badge"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- First Fermentation Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIRST FERMENTATION"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Tea Leaf -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tea Leaf"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_tea_leaf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 Tbs Black Tea"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Water -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12 cups"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Sugar -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sugar"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_sugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3/4 cups"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- SCOBY -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SCOBY"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_scoby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1/2 inch"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Kombucha Starter -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kombucha Starter"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_kombucha_starter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3/4 cup from Batch #3"
                        android:textSize="16sp"
                        android:textColor="#8B4513" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Second Fermentation Section -->
            <LinearLayout
                android:id="@+id/flavor_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SECOND FERMENTATION"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D2691E"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Flavor"
                            android:textSize="12sp"
                            android:textColor="#A0522D"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_flavor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50g Ginger and Dried Flowers"
                            android:textSize="16sp"
                            android:textColor="#8B4513" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Dates Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIMELINE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Created"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_created_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oct 28, 2025"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brewing Started"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_brewing_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:textColor="#8B4513"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="#A0522D"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_completion_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="16sp"
                        android:textColor="#8B4513" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notes Section -->
            <LinearLayout
                android:id="@+id/notes_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOTES"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D2691E"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="0.1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recipe notes here..."
                        android:textSize="14sp"
                        android:textColor="#8B4513"
                        android:padding="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top row - Primary actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                android:backgroundTint="#FF8C00"
                android:layout_marginEnd="4dp" />

            <!-- Draft state: Start Brewing -->
            <Button
                android:id="@+id/btn_start_brewing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Brewing"
                android:backgroundTint="#D2691E"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

            <!-- Brewing state: Pause -->
            <Button
                android:id="@+id/btn_pause_brewing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â¸ Pause"
                android:backgroundTint="#FF9800"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

            <!-- Paused state: Resume -->
            <Button
                android:id="@+id/btn_resume_brewing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â–¶ Resume"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

            <!-- Completed state: Rebrew -->
            <Button
                android:id="@+id/btn_rebrew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”„ Rebrew"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Second row - Secondary actions (only visible when brewing/paused) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Brewing state: Complete button -->
            <Button
                android:id="@+id/btn_mark_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ“ Complete"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <!-- Brewing/Paused state: Back to Draft -->
            <Button
                android:id="@+id/btn_back_to_draft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â† Back to Draft"
                android:backgroundTint="#9E9E9E"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
